<i18n-var/>
<layout-use("../../common/layout.marko")>

  <layout-put into="page-title">
    <i18n-message key="500:heading"/>
  </layout-put>

  <layout-put into="content">

    <h1 class="heading-xlarge">
      <i18n-message key="500:heading"/>
    </h1>

    <p class="text">
      <i18n-message key="500:body"/>
    </p>

    <pre if(data.developmentMode)>
      $!{data.err.stack}
    </pre>

  </layout-put>

</layout-use>
